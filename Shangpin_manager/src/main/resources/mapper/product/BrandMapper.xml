<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        <mapper namespace="com.zack.manager.mapper.BrandMapper">

        <resultMap id="brandMap" type="com.zack.model.enity.product.Brand" autoMapping="true">
        </resultMap>

        <!-- 用于select查询公用抽取的列 -->
        <sql id="columns">
        id,name,logo,create_time,update_time,is_deleted
        </sql>
        <insert id="save">
                insert into brand (
                        name,
                        logo,
                        create_time ,
                        update_time ,
                        is_deleted
                ) values (
                                 #{name},
                                 #{logo},
                                 now(),
                                 now(),
                                 0
                         )

        </insert>

                <select id="findByPage" resultMap="brandMap">
        select <include refid="columns" />
        from brand
        where is_deleted = 0
        order by id desc
        </select>

        </mapper>